{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./freshteam/server",
        "moduleResolution": "node",
        "sourceMap": false
    },
    "compileOnSave": true,
    "include": [
        "./server"
    ]
}